{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"types": ["astro/client"],
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
	"exclude": ["dist", "node_modules"]
}
