{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": [
		".astro/types.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.astro"
	],
	"exclude": ["dist", "node_modules"]
}
